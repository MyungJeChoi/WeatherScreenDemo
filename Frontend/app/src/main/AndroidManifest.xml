<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <!-- Android 13+에서 알림 표시하려면 런타임 권한 필요 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-feature android:name="android.software.live_wallpaper" android:required="false" />


    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.WeatherDemo">

        <!-- ① 런처: lockloop.MainActivity 로 변경 -->
        <activity
            android:name="com.example.lockloop.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WeatherDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ② 라이브 월페이퍼 적용 화면 (알림 눌렀을 때 뜨는 액티비티) -->
        <activity
            android:name="com.example.lockloop.wallpaper.SetWallpaperActivity"
            android:exported="true" />

        <!-- ③ 라이브 월페이퍼 서비스: 패키지 풀네임으로 명시 -->
        <service
            android:name="com.example.lockloop.wallpaper.LoopVideoWallpaperService"
            android:label="Loop Video Wallpaper"
            android:permission="android.permission.BIND_WALLPAPER"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>

    </application>

</manifest>